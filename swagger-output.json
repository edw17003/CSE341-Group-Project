    "/arts/": {
      "get": {
        "tags": ["Art"],
        "summary": "Get all artworks",
        "description": "Retrieves all artworks from the collection",
        "operationId": "getAllArts",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "apiKey",
            "in": "header",
